{
  "name": "tymble",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "app": "turbo run dev --filter=tymble-* --ui=tui",
    "dev:api": "turbo run dev --filter=tymble-api",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check-types": "turbo run check-types",
    "init:hosts": "./scripts/add-api-host.sh",
    "env:init": "turbo run env:init",
    "init": "pnpm install && pnpm build && pnpm start:all",
    "start:apps": "docker compose up -d",
    "start:db": "docker compose -f ./docker-compose.db.yml up -d db",
    "start:all": "pnpm start:db && pnpm start:apps",
    "stop:apps": "docker compose stop ui api logs",
    "stop:db": "docker compose -f ./docker-compose.db.yml stop db",
    "stop:all": "pnpm stop:db && pnpm stop:apps"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "turbo": "^2.6.0",
    "typescript": "5.9.2",
    "ultracite": "6.3.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    }
  }
}
